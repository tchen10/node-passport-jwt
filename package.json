{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Basic authentication service",
  "main": "index.js",
  "scripts": {
    "build": "npm run lint && tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "dev": "nodemon --watch 'src' --ignore 'src/**/*spec.ts' --exec 'ts-node --require dotenv/config' src/index.ts",
    "start": "npm run build && node --require dotenv/config dist/index.js",
    "test": "mocha --compilers ts-node/register --watch-extensions ts 'src/**/*spec.ts' --watch",
    "postbuild": "cp -R node_modules dist/. && cp package*.json dist/."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-validator": "^2.20.8",
    "jwt-simple": "^0.5.1",
    "moment": "^2.21.0",
    "mongoose": "^5.0.10",
    "passport": "^0.4.0",
    "passport-jwt": "^2.2.1",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/jwt-simple": "^0.5.33",
    "@types/mongoose": "^5.0.7",
    "@types/node": "^9.4.7",
    "@types/passport": "^0.4.3",
    "@types/passport-jwt": "^3.0.1",
    "chai": "^4.1.2",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.2",
    "ntypescript": "^1.201706190042.1",
    "nyc": "^11.6.0",
    "source-map-support": "^0.5.4",
    "supertest": "^3.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
